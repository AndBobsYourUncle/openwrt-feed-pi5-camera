 	updateBuffers();
 
+	/*
+	 * Sync the DMA buffer for CPU access. This is required on platforms
+	 * where the CPU cache is not coherent with the DMA engine.
+	 */
+	int bufFd = vcam_->getBufferFd(currentBuf_);
+	if (bufFd >= 0) {
+		struct dma_buf_sync sync = {
+			.flags = DMA_BUF_SYNC_START | DMA_BUF_SYNC_READ,
+		};
+		V4L2CompatManager::instance()->fops().ioctl(bufFd,
+							    DMA_BUF_IOCTL_SYNC,
+							    &sync);
+	}
+
 	struct v4l2_buffer &buf = buffers_[currentBuf_];
 
 	buf.flags &= ~(V4L2_BUF_FLAG_QUEUED | V4L2_BUF_FLAG_DONE | V4L2_BUF_FLAG_PREPARED);
